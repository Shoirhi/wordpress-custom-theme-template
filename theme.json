{
    "$schema": "https://schemas.wp.org/trunk/theme.json",
    "version": 3,
    "settings": {
        "appearanceTools": true,
        "layout": {
            "contentSize": "800px",
            "wideSize": "1200px"
        },
        "color": {
            "defaultPalette": false,
            "defaultGradients": false,
            "palette": [
                {
                    "slug": "primary",
                    "color": "#1a1a1a",
                    "name": "Primary"
                },
                {
                    "slug": "secondary",
                    "color": "#555555",
                    "name": "Secondary"
                },
                {
                    "slug": "base",
                    "color": "#ffffff",
                    "name": "Base"
                },
                {
                    "slug": "contrast",
                    "color": "#1a1a1a",
                    "name": "Contrast"
                },
                {
                    "slug": "surface",
                    "color": "#f5f5f5",
                    "name": "Surface"
                }
            ]
        },
        "typography": {
            "fontFamilies": [
                {
                    "fontFamily": "\"Noto Sans JP\", sans-serif",
                    "slug": "body",
                    "name": "Body"
                },
                {
                    "fontFamily": "monospace",
                    "slug": "monospace",
                    "name": "Monospace"
                }
            ]
        },
        "custom": {
            "header": {
                "adminBarBlockSize": "32px",
                "adminBarBlockSizeMobile": "46px"
            }
        }
    }
}